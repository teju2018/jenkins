pipeline{
    agent any 
    stages{
        stage("build"){
            steps{
                sh 'hostnamectl'
                sh 'touch /tmp/file1.txt'
            }
        }
    }
    post{
        always{
            echo 'ALWAYS'
        }
        success{
            echo 'Only on succes'
        }
        failure{
            echo 'Only on failure'
        }
        changed{
            echo 'only is status changed from sucess to failure or vice versa w.r.t last run'
        }
    }
}
