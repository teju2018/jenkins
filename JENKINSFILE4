pipeline {
    agent any
    stages {
        stage("PYTHON") {
            steps {
                sh 'python333 dit.py'
            }
        }
        stage("Unit tests") {
            steps {
                echo 'Running unit tests'
            }
        }
        stage("Deploy") {
            steps {
                echo 'Deploying build'
            }
        }
        stage("Regression Test") {
            parallel {
                stage("Chrome") {
                    steps {
                        echo "Running E2E tests on Chrome"
                    }
                }
                stage("Firefox") {
                    steps {
                        echo "Running E2E tests on Firefox"
                    }
                }
                stage("Safari") {
                    steps {
                        echo "Running E2E tests on Safari"
                    }
                }
            }
        }
    }
}
