pipeline {
    agent any
    stages {
        stage("BUILD") {
            steps {
                echo 'Build in progress'
            }
        }
        stage("Unit tests") {
            steps {
                echo 'Running unit tests'
            }
        }
        stage("Deploy") {
            steps {
                echo 'Deploying build in Softility'
            }
        }
        stage("Regression Test") {
            parallel {
                stage("Chrome") {
                    steps {
                        echo "Running e2e tests on Chrome"
                    }
                }
                stage("Firefox") {
                    steps {
                        echo "Running E2E tests on Firefox"
                    }
                }
                stage("Safari") {
                    steps {
                        echo "Running E2E tests on Safari"
                    }
                }
            }
        }
    }
}
