pipeline{
    agent any 
    stages{
        stage("build"){
            steps{
                sh 'echho Compiling code........'
            }
        }
    }
    post{
        always{
            echo 'ALWAYS'
        }
        success{
            echo 'Only on succes'
        }
        failure{
            echo 'only if run is unstable'
        }
        changed{
            echo 'only is status changed from sucess to failure or vice versa w.r.t last run'
        }
    }
}
